<div class="c-header py-2">
    <div class="container-fluid">
        <div class="d-flex flex-wrap">
            <a class="d-flex align-items-center mb-3" href="{{ siteUrl }}" alt={{ siteName }}>
                <img class="c-header-logo d-none d-lg-block pr-lg-3" src="../source/img/logo.svg" alt="{{ siteName }} logo">
                <div class="d-flex flex-column"> 
                    <h1 class="mb-0 text-primary">{{ siteName | split(' ')[0] }}</h1>
                    <h2 class="mb-0 text-white">{{ siteName | split(' ')[1] }}</h2>
                </div>
            </a>
            <a class="d-none d-sm-flex d-lg-none ml-auto" href="{{ craft.entries.section("blogpage").one().url }}" title={{ "News" | t }}>
                <img class="c-header-link c-icon--small" src="../source/icons/blog.svg" alt="News">
            </a>
        </div>
    </div>
</div>